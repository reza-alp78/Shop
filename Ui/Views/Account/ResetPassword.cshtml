@model Core.ViewModel.EmailSender.MailSender

<span>ورود به سایت</span>
<form asp-controller="Account" asp-action="ResetPassword" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-5">
            <label asp-for="SendCode"></label>
            <input type="text" asp-for="SendCode" />
            <span class="text-danger" asp-validation-for="SendCode"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-5">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <button type="submit">ثبت</button>
        </div>
        <div class="col-2">
            <a asp-action="Register">عضویت در سایت</a>
        </div>
        <div class="col-3">
            <a asp-action="Login">ورود به سایت</a>
        </div>
    </div>
</form>