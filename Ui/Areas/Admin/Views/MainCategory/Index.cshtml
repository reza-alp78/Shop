@model List<Core.ViewModel.Categories.MainCategoryViewModel>

@Html.AntiForgeryToken()
<h1>دسته اصلی</h1>
<div class="row">
    <div class="col-3">
        <a asp-controller="MainCategory" asp-action="CreateMainCategory">ساخت دسته اصلی</a>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-3">
            <label>@item.MainCategoryName</label>
        </div>
        <div class="col-1">
            <a asp-controller="MainCategory" asp-action="UpdateMainCategory" asp-route-id="@item.Id">ویرایش</a>
        </div>
        <div class="col-1">
            <a asp-controller="MainCategory" asp-action="DeleteMainCategory" asp-route-id="@item.Id">حذف</a>
        </div>
    </div>
    <br />
}
