@model List<Core.ViewModel.Categories.SubCategoryViewModel>

@Html.AntiForgeryToken()
<h1>زیردسته ها</h1>
<div class="row">
    <div class="col-9">
        <a asp-controller="SubCategory" asp-action="CreateSubCategory">ساخت زیردسته</a>
    </div>
    <div class="col-3">
        <a asp-controller="Category" asp-action="Index">بازگشت به دسته</a>
    </div>
</div>
<br />
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-3">
            <label>@item.SubCategoryName</label>
        </div>
        <div class="col-1">
            <a asp-controller="SubCategory" asp-action="UpdateSubCategory" asp-route-id="@item.Id">ویرایش</a>
        </div>
        <div class="col-1">
            <a asp-controller="SubCategory" asp-action="DeleteSubCategory" asp-route-id="@item.Id">حذف</a>
        </div>
        <div class="col-2">
            <a asp-controller="UnImportantCategory" asp-action="Index" asp-route-subCategoryId="@item.Id">دسته فرعی</a>
        </div>
        <div class="col-2">
            <a asp-controller="Product" asp-action="ChoiesPropertyUpdateOrAddSubCategory" asp-route-subCategoryId="@item.Id">خصوصیت</a>
        </div>
    </div>
    <br />
}
